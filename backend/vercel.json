{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "**",
          "openapi.yaml",
          "node_modules/swagger-ui-dist/**"
        ]
      }
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run build",
  "devCommand": "npm run start-dev",
  "framework": "express"
}
